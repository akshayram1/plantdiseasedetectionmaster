<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppleActivity"
    android:orientation="vertical"
    android:background="#2B2B2B">


    <TextView
        android:id="@+id/uploadtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:layout_above="@+id/uploadImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="77dp"
        android:layout_marginLeft="90dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="21dp"
        android:fontFamily="@font/bebas_neue"
        android:text="UPLOAD IMAGE"
        android:textColor="#FFD523"
        android:textSize="45sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/uploadImage"
        android:layout_width="174dp"
        android:layout_height="181dp"
        android:paddingLeft="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="95dp"

        android:src="@drawable/photo" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/diseases"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30sp"
                android:text="Plant Disease"
                android:textColor="#A7BBC7"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/diseasesInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Information"
                android:background="#5B5B5B"
                android:textColor="#EDFFEC"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/cure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cure Of Disease"
                android:textColor="#A7BBC7"
                android:layout_marginTop="40sp"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/cureInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="CureInfo"
                android:textColor="#EDFFEC"
                android:background="#5B5B5B"
                android:textSize="25sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15sp"
                android:layout_marginLeft="110sp"
                android:layout_marginTop="50sp"
                android:background="@drawable/custbutt"
                android:fontFamily="@font/amaranth"
                android:text=" Buy Pesticides"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>