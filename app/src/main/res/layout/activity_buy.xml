<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">

        <ImageView
            android:layout_width="170sp"
            android:layout_height="170sp"
            android:src="@drawable/fert1"></ImageView>

        <TextView
            android:id="@+id/fert1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/myborder"

            android:fontFamily="@font/bebas_neue"
            android:padding="40sp"
            android:text="Casa de amor Fertilizer Rs:270/-"
            android:textSize="25sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp">

        <ImageView
            android:layout_width="170sp"
            android:layout_height="170sp"
            android:layout_marginTop="15sp"
            android:background="@color/white"
            android:src="@drawable/fert2"></ImageView>

        <TextView
            android:id="@+id/f2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/myborder"
            android:fontFamily="@font/bebas_neue"
            android:padding="55sp"
            android:text="SAAF Fungicide Rs:189/"
            android:textSize="25sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp">

        <ImageView
            android:layout_width="170sp"
            android:background="@color/white"
            android:layout_height="170sp"
            android:layout_marginTop="15sp"
            android:src="@drawable/fert3"></ImageView>

        <TextView
            android:id="@+id/f3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/myborder"
            android:fontFamily="@font/bebas_neue"
            android:padding="40sp"
            android:text="Antracol Fungicide Rs:219/-"
            android:textSize="25sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp">

        <ImageView
            android:layout_width="170sp"
            android:layout_height="170sp"
            android:background="@color/white"
            android:src="@drawable/fert4"></ImageView>

        <TextView
            android:id="@+id/f4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/myborder"
            android:fontFamily="@font/bebas_neue"
            android:padding="40sp"
            android:text="Kocide Metallic copper Fungicide Rs:270/-"
            android:textSize="25sp"></TextView>
    </LinearLayout>


</LinearLayout>